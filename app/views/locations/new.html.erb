<%= video_tag "pouring_red_wine.mp4", autoplay: :autoplay, loop: :loop, mute: :mute, class: "video" %>

    <section>
      <div class="row">
        <div class="col-sm-9">
          <div class="location_single">
            <% if @location && @location.errors.any? %>
              <div>
                <% @location.errors.full_messages.each do |message| %>
                  <ul><%= message %></ul>
                <% end %>
              </div>
            <% end %>
            <h1>New Drinkery</h1>

            <%= form_tag '/locations', method: :post do %>
<div class="new_page_text">
            <div>
              <%= label_tag :name %>
              <%= text_field_tag :name, @location.name %>
            </div>
            <div>
              <%= label_tag :address %>
              <%= text_field_tag :address, @location.vicinity %>
            </div>
            <div>

            <%= submit_tag "Add Location" %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>