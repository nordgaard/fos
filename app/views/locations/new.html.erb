<h1>Add a new Location!</h1>

<% if @location && @location.errors.any? %>
<ul>
  <% @location.errors.full_messages.each do |message| %>
  <li ><%= message %></li>
  <% end %>
</ul>

<% end %>
<%= form_tag '/locations', method: :post do %>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @location.name%>
</div>


<!-- Include address somehow? -->


<%= submit_tag "Add location" %>

<% end %>