<h1>Locations</h1>

<a href="/locations?sort=city">Sort by City</a>
<a href="/locations?sort=name">Sort by Name</a>

<div class="row">
  <% @locations.each do |location| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <a href="/locations/<%= location.id %>">
        <p><%= location.name %></p>
        <p><%= location.address %></p>
        <p><%= location.city %></p>
        <a href="/locations/<%= location.id %>" title="View location"><img src="<%= location.show_image %>" class="img-responsive location_single_image"></a>
      </a>
    </div>
  </div>
  <% end %>
</div>