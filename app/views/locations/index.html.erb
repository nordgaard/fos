<div ng-controller="locationCtrl" ng-init="setup()"> 
  <ul>
    <li ng-repeat="error in errors">{{ error }}</li>
  </ul>

  <h1>Look at all these Drinkeries!!!</h1>

  <label>Search Listings</label>
  <input ng-model="nameFilter">
<div class="table">
  <table>
    <tr>
      <th>Location Name</th>
      <th>Address</th>
      <th>View this Location</th>
      <th>Are they Happy?</th>
    </tr>
    <tr ng-repeat="location in locations | filter: nameFilter ">
      <td>{{ location.name }}</td>
      <td>{{ location.vicinity }}</td>
      <td><input type="button" onclick="'/location/' + location.id " value="See This Location" /></td>
      <td><input type="button" onclick="'/happy_hours/new' + location.id " value="Hype This HH" /></td>
    </tr>
  </table> 
</div>

