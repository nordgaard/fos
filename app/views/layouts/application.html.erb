    $(document).ready(function() {
      $('.quotes').quovolver();
    });
  </script> -->
  <!-- ^^quote cycling     is .min the issue? -->

</head>

<body id="page-top" class="modern">
 <% flash.each do |name, message|%>
 <div class="alert alert-<%= name %> alert-dismissible fade in" role="alert">
   <button type="button" class="close" data-dismiss="alert" aria-label="Close">&times;</span><span class="sr-only">Close</span></button>
   <%= message.html_safe %>  
 </div><% end %>

 <nav class="navbar navbar-inverse">
   <div class="container-fluid">
     <!-- Brand and toggle get grouped for better mobile display -->
     <!-- Collect the nav links, forms, and other content for toggling -->
     <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
       <ul class="nav navbar-nav">
         <li><a href="/"><i class="fa fa-beer" aria-hidden="true"></i> Home<span class="sr-only"></span></a></li>
         <li> <%= link_to "Happy Hours", "/happy_hours" %></li>  
         <li> <%= link_to "Locations", "/locations" %></li>  
       </ul>
       <ul class="nav navbar-nav navbar-right">
         <li class="dropdown">
           <% if current_user %>
           <a class="dropdown-toggle" data-toggle="dropdown" href="#">Hello, <%=current_user.first_name %>!
             <span class="caret"></span></a>
             <ul class="dropdown-menu">

               <div class="inverse-dropdown-color"></div>
               <li><%= link_to "Sign Out", "/users/sign_out", method: :delete %></li>
             </ul>
             <% else %>
             <li><%= link_to "Sign Up", "/users/sign_up" %></li>
             <li><%= link_to "Sign In", "/users/sign_in" %></li>
             <% end %>
           </li>

         </ul>
       </div><!-- /.navbar-collapse -->
     </div><!-- /.container-fluid -->
   </nav>

   <!-- scrolling images -->

   <div ng-app="app">
     <%= yield %>
   </div>

  <footer class="footer" style="background-image: url('assets/img/bg-footer.jpg')">
      <div class="container text-center">
          <div class="row">
              <div class="col-md-4 contact-details">
                  <h4><i class="fa fa-phone"></i> Call</h4>
                  <p>510-309-0237</p>
              </div>
              <div class="col-md-4 contact-details">
                  <h4><i class="fa fa-info"></i> Link to Resume</h4>
                  <p>3481 Melrose Place
                      <br>Beverly Hills, CA 90210</p>
              </div>
              <div class="col-md-4 contact-details">
                  <h4><i class="fa fa-envelope"></i> Email</h4>
                  <p><a href="mailto:jenordgaard@gmail.com"></a>
                  </p>
              </div>
          </div>
          <div class="row social">
              <div class="col-lg-12">
                  <ul class="list-inline">
                      <li><a href="#"><i class="fa fa-facebook fa-fw fa-2x"></i></a>
                      </li>
                      <li><a href="#"><i class="fa fa-twitter fa-fw fa-2x"></i></a>
                      </li>
                      <li><a href="#"><i class="fa fa-linkedin fa-fw fa-2x"></i></a>
                      </li>
                  </ul>
              </div>
          </div>
          <div class="row copyright">
              <div class="col-lg-12">
                  <p class="small">&copy; 2015 Start Bootstrap Themes</p>
              </div>
          </div>
      </div>
  </footer>

</body>
</html>
