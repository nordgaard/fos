<div ng-controller="happyHourCtrl" ng-init="setup()"> 


  <ul>
    <li ng-repeat="error in errors">{{ error }}</li>
  </ul>
  
  <h1>Happy Hour Postings from People like You!!!</h1>

  <label>Search Postings</label>
  <input ng-model="nameFilter">
 <table>
   <tr>
     <th>Name of Location</th>
     <th>Name of Author</th>
     <th>Posting Title</th>
     <th>Day of the Week</th>
     <th>Starting Time</th>
     <th>Ending Time</th>
     <th>Description</th>
     </tr>
   <tr ng-repeat="happy_hour in happy_hours | filter: nameFilter">
     <td><a href ="/locations/{{happy_hour.location_id}}" >{{ happy_hour.location}}</a></td>
     <td>{{ happy_hour.author}}</td>
     <td>{{ happy_hour.hype_title }}</td>
     <td>{{ happy_hour.day_of_week }}</td>
     <td>{{ happy_hour.start_hour }}</td>
     <td>{{ happy_hour.end_hour }}</td>
     <td>{{ happy_hour.hype_description }}</td>
   </tr>
 </table> 

</div>
   <p><button><a href="/happy_hours/new">Hype a New Happy Hour</button></p> 
   <p><button><a href="/locations/new">Add New Location</button></p> 





